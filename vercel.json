{
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "dist/spa",
      "use": "@vercel/static",
      "config": {
        "maxAge": "1y",
        "cleanUrls": true,
        "trailingSlash": false
      }
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*\\..*)",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
